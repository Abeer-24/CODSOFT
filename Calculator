def simpcalc():
  num1=int(input("Enter first number: "))
  num2=int(input("Enter second number: "))
  print("Enter operation",end=":")
  print("'+','-','*','/'")
  operation=input()
  if operation=='+':
    print(num1+num2)
  elif operation=='-':
    print(num1-num2)
  elif operation=='*':
    print(num1*num2)
  elif operation=='/':
    if num2==0:
      print("Cannot divide by zero")
    else:
      print(num1/num2)
  else:
    print("Invalid operation")
simpcalc()
